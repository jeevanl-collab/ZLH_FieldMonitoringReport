<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
>
    <f:SimpleForm
        editable="true"
        layout="ResponsiveGridLayout"
        labelSpanXL="3"
        labelSpanL="3"
        labelSpanM="3"
        labelSpanS="12"
        adjustLabelSpan="false"
        emptySpanXL="4"
        emptySpanL="4"
        emptySpanM="4"
        emptySpanS="0"
        columnsXL="1"
        columnsL="1"
        columnsM="1"
        title="Order Planning/ Maintenance Data"
        singleContainerFullSize="false"
    >
        <f:content>
            <Label text="Planner Group" />
            <MultiInput
                id="idPlannerGroup"
                width="70%"
                showValueHelp="false"
                showClearIcon="true"
                suggestionItemSelected=".onPressPlannerGroup"
                suggestionRows="{
				path: 'ORDOPRService>/PlannerGroupSet'
                }"
            >
                <suggestionColumns>
                    <Column>
                        <Label text="Group ID" />
                    </Column>
                    <Column>
                        <Label text="Description" />
                    </Column>
                </suggestionColumns>
                <suggestionRows>
                    <ColumnListItem>
                        <Label text="{ORDOPRService>PlannerGroupID}" />
                        <Label text="{ORDOPRService>Description}" />
                    </ColumnListItem>
                </suggestionRows>
            </MultiInput>
            <Label text="Work Center" />
            <MultiInput
                id="idWorkCenter"
                width="60%"
                showValueHelp="false"
                valueHelpRequest=".onValueHelpRequested"
                suggestionItemSelected=".onWorkCenterSuggestionItemPress"
                suggestionRows="{
				path: 'OEBmainService>/Main_Work_CenterSet'
			}"
            >
                <suggestionColumns>
                    <Column>
                        <Label text="Main Work Center" />
                    </Column>
                    <Column>
                        <Label text="Description" />
                    </Column>
                </suggestionColumns>
                <suggestionRows>
                    <ColumnListItem>
                        <Label text="{OEBmainService>MainWorkCenter}" />
                        <Label text="{OEBmainService>Description}" />
                    </ColumnListItem>
                </suggestionRows>
            </MultiInput>
        </f:content>
    </f:SimpleForm>
</core:FragmentDefinition>
